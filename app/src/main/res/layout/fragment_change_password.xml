<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_example.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600sp"
    android:orientation="vertical"
    android:background="@drawable/background_changepass"
    android:layout_marginTop="55sp"
    android:layout_marginLeft="25sp"
    android:layout_marginRight="25sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgorund="@color/menu">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="10sp"
                android:src="@drawable/arrowblack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/passwordtext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="10sp"
                android:textColor="@color/white"
                android:text="Old Password"
                android:textSize="25sp"
                android:layout_marginLeft="25sp"
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/oldidentity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gotham_light"
                android:background="@null"
                android:drawableLeft="@drawable/lock"
                android:inputType="textPassword"
                android:layout_marginLeft="25sp"
                android:padding="10dp"
                android:textColor="@color/menu"

                app:layout_constraintWidth_percent="0.8" />
                />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginHorizontal="40sp"
            android:layout_gravity="left"
            android:background="@color/white"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginHorizontal="40sp"
            android:layout_gravity="left"
            android:background="@color/white"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textColor="@color/white"
                android:layout_gravity="bottom|left"
                android:text="New Password"
                android:textSize="25sp"
                android:layout_marginLeft="25sp"
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/newidentity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gotham_light"
                android:background="@null"
                android:drawableLeft="@drawable/lock"
                android:inputType="textPassword"
                android:layout_marginLeft="25sp"
                android:padding="10dp"
                android:textColor="@color/menu"

                app:layout_constraintWidth_percent="0.8" />
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginHorizontal="40sp"
            android:layout_gravity="left"
            android:background="@color/white"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginHorizontal="40sp"
            android:layout_gravity="left"
            android:background="@color/white"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textColor="@color/white"
                android:text="Repeat Password"
                android:layout_gravity="bottom|left"
                android:textSize="25sp"
                android:layout_marginLeft="25sp"
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/repeatidentity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gotham_light"
                android:background="@null"
                android:drawableLeft="@drawable/lock"
                android:inputType="textPassword"
                android:layout_marginLeft="25sp"
                android:padding="10dp"
                android:textColor="@color/menu"

                app:layout_constraintWidth_percent="0.8" />
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginHorizontal="40sp"
            android:layout_gravity="left"
            android:background="@color/white"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginHorizontal="40sp"
            android:layout_gravity="left"
            android:background="@color/white"
            android:orientation="horizontal">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change Password"
                android:textSize="18sp"
                android:textColor="@color/menu" />
        </LinearLayout>


    </LinearLayout>
