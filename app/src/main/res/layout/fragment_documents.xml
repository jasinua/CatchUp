<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        >


        <LinearLayout
            android:id="@+id/topMenuStuff"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:background="@color/menu"
            >

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_margin="0sp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:padding="1sp"
                android:src="@drawable/logo"
                android:layout_marginLeft="10sp"

                />

            <TextView
                android:id="@+id/quesetion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Documents"
                android:textColor="@color/blue"
                android:fontFamily="@font/font_one"
                android:padding="10sp"
                android:paddingEnd="10sp"
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity = "center|left"
                android:layout_weight="1"
                />


        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow android:padding="10sp"
                android:layout_weight="0.3">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >

                    <ImageButton
                        android:id="@+id/ligjerata"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/folder"
                        android:layout_weight="0.5"
                        android:layout_margin="10sp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@drawable/roundborderdark"
                        android:padding="10sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ligjerata"
                        android:textColor="@color/blue"
                        android:textSize="30sp"
                        android:layout_gravity="center">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.75"
                    >

                    <ImageButton
                        android:id="@+id/afate"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/folder"
                        android:layout_weight="0.5"
                        android:layout_margin="10sp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@drawable/roundborderdark"
                        android:padding="10sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afate"
                        android:textColor="@color/blue"
                        android:textSize="30sp"
                        android:layout_gravity="center">

                    </TextView>

                </LinearLayout>

            </TableRow>

            <TableRow android:padding="10sp"
                android:layout_weight="0.33">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >

                    <ImageButton
                        android:id="@+id/projekte"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/folder"
                        android:layout_weight="0.5"
                        android:layout_margin="10sp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@drawable/roundborderdark"
                        android:padding="10sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Projekte"
                        android:textColor="@color/blue"
                        android:textSize="30sp"
                        android:layout_gravity="center">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.75"
                    >

                    <ImageButton
                        android:id="@+id/kuize"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/folder"
                        android:layout_weight="0.5"
                        android:layout_margin="10sp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@drawable/roundborderdark"
                        android:padding="10sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kuiz"
                        android:textColor="@color/blue"
                        android:textSize="30sp"
                        android:layout_gravity="center">

                    </TextView>

                </LinearLayout>
            </TableRow>

            <TableRow android:padding="10sp"
                android:layout_weight="0.33">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >

                    <ImageButton
                        android:id="@+id/libra"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/folder"
                        android:layout_weight="0.5"
                        android:layout_margin="10sp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@drawable/roundborderdark"
                        android:padding="10sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Libra"
                        android:textColor="@color/blue"
                        android:textSize="30sp"
                        android:layout_gravity="center">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.75">

                    <ImageButton
                        android:id="@+id/docs"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/folder"
                        android:layout_weight="0.5"
                        android:layout_margin="10sp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@drawable/roundborderdark"
                        android:padding="10sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bin"
                        android:textColor="@color/blue"
                        android:textSize="30sp"
                        android:layout_gravity="center">

                    </TextView>

                </LinearLayout>
            </TableRow>

        </TableLayout>


    </LinearLayout>
    <!--    vertical layout ^-->

</FrameLayout>