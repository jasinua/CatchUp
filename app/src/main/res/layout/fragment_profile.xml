<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="@color/background">


    <LinearLayout
        android:id="@+id/MainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/topMenuStuff"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="@color/menu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_margin="0sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="0.1"
                android:padding="1sp"
                android:src="@drawable/logo"
                />

            <TextView
                android:id="@+id/quesetion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/font_one"
                android:gravity="left|center"
                android:padding="10sp"
                android:paddingEnd="10sp"
                android:text="Your Profile"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:padding="5sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/roundborder"
                tools:src="@drawable/name"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:padding="15sp"
                android:weight="0.7"
                android:text="Name"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:background="@drawable/roundborder"
                android:paddingLeft = "20sp"
                android:paddingTop = "18sp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:padding="10sp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:background="@drawable/roundborder"
                tools:src="@drawable/book"
                android:layout_marginRight="10sp"

                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="15sp"
                android:text="Drejtimi"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:background="@drawable/roundborder"
                android:paddingLeft = "20sp"
                android:paddingTop = "18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:padding="10sp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:padding="5sp"
                android:background="@drawable/roundborder"
                tools:src="@drawable/id"
                android:layout_marginRight="10sp"

                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="15sp"
                android:text="ID"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:background="@drawable/roundborder"
                android:paddingLeft = "20sp"
                android:paddingTop = "18sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            >


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:padding="6sp"
                android:background="@drawable/roundborder"
                tools:src="@drawable/email"
                android:layout_marginRight="10sp"

                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="15sp"
                android:text="Email"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:background="@drawable/roundborder"
                android:paddingLeft = "20sp"
                android:paddingTop = "18sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:background="@drawable/roundborder"
                android:padding="5sp"
                tools:src="@drawable/calendar"
                android:layout_marginRight="10sp"

                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Birthday"
                android:textSize="25sp"
                android:padding="15sp"
                android:textColor="@color/black"
                android:background="@drawable/roundborder"
                android:paddingLeft = "20sp"
                android:paddingTop = "18sp"
                />
        </LinearLayout>



    </LinearLayout>

    <!--    Vertical layout ^ -->

</FrameLayout>