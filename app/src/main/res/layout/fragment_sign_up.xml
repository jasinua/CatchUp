<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SignUpFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/catchup"
            >

            <TextView
                android:id="@+id/createAccText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="Create Account"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/gotham_bold"
                />

            <EditText
                android:id="@+id/studentID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createAccText"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:background="@drawable/roundborder"
                android:hint="Student ID"
                android:fontFamily="@font/gotham_light"
                android:textColor="@color/menu"
                android:textColorHint="@color/menu"
                android:paddingEnd="0dp"

                android:textCursorDrawable="@null"

                />

            <EditText
                android:id="@+id/emriMbiemri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/studentID"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/roundborder"
                android:hint="Emri dhe Mbiemri"
                android:fontFamily="@font/gotham_light"
                android:textColor="@color/menu"
                android:textColorHint="@color/menu"
                android:paddingEnd="0dp"

                android:textCursorDrawable="@null"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emriMbiemri"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/roundborder"
                android:hint="Email"
                android:fontFamily="@font/gotham_light"
                android:textColor="@color/menu"
                android:textColorHint="@color/menu"
                android:paddingEnd="0dp"

                android:textCursorDrawable="@null"
                />

            <EditText
                android:id="@+id/fakullteti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/roundborder"
                android:hint="Fakullteti"
                android:fontFamily="@font/gotham_light"
                android:textColor="@color/menu"
                android:textColorHint="@color/menu"
                android:paddingEnd="0dp"

                android:textCursorDrawable="@null"
                />


            <EditText
                android:id="@+id/passwordSignUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fakullteti"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/roundborder"
                android:hint="Password"
                android:fontFamily="@font/gotham_light"
                android:textColor="@color/menu"
                android:textColorHint="@color/menu"
                android:paddingEnd="0dp"

                android:textCursorDrawable="@null"
                />
            <EditText
                android:id="@+id/repeatPasswordSignUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordSignUp"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/roundborder"
                android:hint="Repeat password"
                android:fontFamily="@font/gotham_light"
                android:textColor="@color/menu"
                android:textColorHint="@color/menu"
                android:paddingEnd="0dp"

                android:textCursorDrawable="@null"
                />

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repeatPasswordSignUp"
                android:textSize="17dp"
                android:text="Sign Up"
                android:textColor="@color/red4_new_background"
                android:fontFamily="@font/gotham_bold"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="70dp"
                />

            <TextView
                android:id="@+id/gotoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? LOG IN!"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_bold"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpButton"
                app:layout_constraintBottom_toBottomOf="parent"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>