<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/focusedPost"
    >

    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.sistemielektronikperkomunikiminestudenteve.postFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" />
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.sistemielektronikperkomunikiminestudenteve.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_postedFragment"
            app:destination="@id/postedFragment" />
    </fragment>
    <fragment
        android:id="@+id/postedFragment"
        android:name="com.example.sistemielektronikperkomunikiminestudenteve.postedFragment"
        android:label="fragment_posted"
        tools:layout="@layout/fragment_posted" >
        <action
            android:id="@+id/action_postedFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_postedFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/focusedPost"
        android:name="com.example.sistemielektronikperkomunikiminestudenteve.focusedPost"
        android:label="focusedPost" />
</navigation>