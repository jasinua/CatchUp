    </item>


    <item android:state_enabled="true" >
        <shape  android:shape="rectangle">
            <solid android:color="#b0d9b1"/>
            <corners android:radius="10dp" />
            <stroke android:color="#7aac79" android:width="1.5dp" />
        </shape>
    </item>
</selector>